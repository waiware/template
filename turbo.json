{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "public/dist/**"],
      "dependsOn": ["^build"],
      "env": ["NEXT_PUBLIC_API_HOST"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "//#format-and-lint": {
      "cache": false
    },
    "//#format-and-lint:fix": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "tsc": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "schema:gen": {
      "dependsOn": ["^schema:gen"],
      "env": ["DATABASE_URL"]
    },
    "migrate": {
      "cache": false
    },
    "migrate:dev": {
      "cache": false
    },
    "migrate:dev:reset": {
      "cache": false
    },
    "migrate:gen": {
      "cache": false
    }
  }
}
