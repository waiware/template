{
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "yarn install && tsc && yarn schema:gen",
    "clean": "rm -rf dist",
    "dev": "nodemon --exec \"node -r esbuild-register ./src/index.ts\" -e .ts",
    "start": "node -r esbuild-register ./src/index.ts",
    "test": "jest --detectOpenHandles",
    "schema:format": "yarn prisma-case-format --file=./prisma/schema.prisma --config-file=./prisma/.prisma-case-format",
    "schema:gen": "yarn schema:format && yarn prisma generate --schema=./prisma/schema.prisma",
    "migrate:gen": "yarn prisma migrate dev --create-only --schema=./prisma/schema.prisma --name",
    "migrate-for-single": "yarn prisma migrate deploy --schema=./prisma/schema.prisma",
    "migrate-for-single:reset": "yarn prisma migrate reset --skip-generate --force --schema=./prisma/schema.prisma",
    "migrate": "yarn migrate-for-single",
    "migrate:dev": "yarn migrate-for-single && DATABASE_URL=postgresql://app_user:local-password@localhost:5432/test?schema=public yarn migrate-for-single",
    "migrate:dev:reset": "yarn migrate-for-single:reset && DATABASE_URL=postgresql://app_user:local-password@localhost:5432/test?schema=public yarn migrate-for-single:reset",
    "migrate:seed": "prisma db seed --preview-feature"
  },
  "dependencies": {
    "@prisma/client": "5.21.1",
    "@repo/types": "*",
    "body-parser": "^1.20.2",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-session": "^1.18.0",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-google-oauth": "^2.0.0",
    "pg": "^8.12.0",
    "prisma": "^5.18.0",
    "zod": "^3.23.8",
    "zod-prisma-types": "^3.1.8"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@trpc/server": "^10.45.2",
    "@types/body-parser": "^1.19.5",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth": "^1.0.45",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^6.0.2",
    "esbuild": "^0.24.0",
    "esbuild-register": "^3.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prisma-case-format": "2.2.1",
    "supertest": "^7.0.0",
    "typescript": "^5.3.3"
  }
}
